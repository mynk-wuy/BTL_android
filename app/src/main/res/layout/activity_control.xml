<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Control Smart Home App"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:layout_marginBottom="24dp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- Greeting -->
            <TextView
                android:id="@+id/textGreeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp"
                android:background="#E2E6BBBB"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.05" />
            <!-- Button chuyển đến tab full màn hình -->
            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👤 Thông tin cá nhân.....Đổi mật khẩu"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="12dp"
                android:backgroundTint="#5A98F2"
                android:layout_marginBottom="16dp" />

            <!-- Switch Đèn -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_bg_white"
                android:elevation="6dp"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đèn 1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="8dp" />

                <Switch
                    android:id="@+id/switchLight1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bật/Tắt Đèn 1"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đèn 2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="8dp" />

                <Switch
                    android:id="@+id/switchLight2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bật/Tắt Đèn 2"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Button lịch sử -->
            <Button
                android:id="@+id/btnHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_primary"
                android:backgroundTint="#6EDCD2"
                android:letterSpacing="0.02"
                android:padding="12dp"
                android:text="📜 Xem lịch sử điều khiển"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <!-- Button đăng xuất -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🚪 Đăng xuất"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:letterSpacing="0.02"
                android:padding="12dp"
                android:background="@drawable/button_danger"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </ScrollView>
    </LinearLayout>